{
  "name": "whisper",
  "displayName": "Whisper",
  "version": "0.0.22",
  "scope": "public",
  "description": "Whisper Model Application",
  "attributes": {
    "Provider": "Open AI",
    "License": "Apache 2.0",
    "Category": "Model",
    "Audio": "Auto Speech Recognition",
    "Media Type": [
      "Audio"
    ],
    "Deployed By": "Open AI"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/openai-model-adapters.git",
    "gitTag": "0.0.22"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "whisper-deploy",
        "runtime": {
          "podType": "regular-l",
          "concurrency": 1,
          "runnerImage": "dataloopai/whisper-gpu.cuda.11.5.py3.8.pytorch2:1.0.1",
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    ],
    "modules": [
      {
        "name": "whisper-module",
        "entryPoint": "adapters/whisper/whisper.py",
        "className": "Whisper",
        "computeConfig": "whisper-deploy",
        "description": "Whisper Module",
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "evaluate_model",
            "input": [
              {
                "type": "Model",
                "name": "model",
                "description": "Dataloop Model Entity"
              },
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "Dataloop Dataset Entity"
              },
              {
                "type": "Json",
                "name": "filters",
                "description": "Dataloop Filter DQL"
              }
            ],
            "output": [
              {
                "type": "Model",
                "name": "model",
                "description": "Dataloop Model Entity"
              },
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "Dataloop Dataset Entity"
              }
            ],
            "displayName": "Evaluate a Model",
            "displayIcon": "",
            "description": "Function to evaluate open AI whipser model performance"
          },
          {
            "name": "predict_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "List of items to run inference on"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input images for prediction."
              },
              {
                "type": "Annotation[]",
                "name": "annotations",
                "description": "The predicted annotations."
              }
            ],
            "displayName": "Predict Items",
            "displayIcon": "",
            "description": "Whisper Open AI predict items"
          },
          {
            "name": "predict_dataset",
            "input": [
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "Dataloop Dataset Entity"
              },
              {
                "type": "Json",
                "name": "filters",
                "description": "Dataloop Filter DQL"
              }
            ],
            "output": [
            ],
            "displayName": "Predict Dataset",
            "displayIcon": "",
            "description": "Whisper Open AI Run on Dataset"
          }
        ]
      }
    ],
    "models": [
      {
        "name": "openai-whisper",
        "moduleName": "whisper-module",
        "scope": "project",
        "status": "pre-trained",
        "configuration": {
          "max_new_tokens": 128,
          "chunk_length_s": 30,
          "batch_size": 16,
          "model_id": "openai/whisper-large-v3"
        },
        "description": "OpenAI Whisper Model",
        "labels": [
          "Transcript"
        ],
        "inputType": "audio",
        "outputType": "subtitle"
      }
    ]
  }
}