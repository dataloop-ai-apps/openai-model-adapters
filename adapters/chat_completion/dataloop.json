{
  "name": "chat-completion",
  "displayName": "Chat Completion",
  "version": "0.0.9",
  "scope": "public",
  "description": "Chat completion Model Application by Open AI",
  "attributes": {
    "Provider": "Open AI",
    "Category": "Model",
    "NLP": "Conversational",
    "Gen AI": "LLM",
    "Media Type": "Text"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/openai-model-adapters.git",
    "gitTag": "0.0.9"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "chat-completion-deploy",
        "runtime": {
          "podType": "regular-xs",
          "concurrency": 1,
          "runnerImage": "python:3.10",
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    ],
    "modules": [
      {
        "name": "chat-completion-module",
        "entryPoint": "adapters/chat_completion/chat_completion.py",
        "className": "ModelAdapter",
        "computeConfig": "chat-completion-deploy",
        "description": "Chat completion Module",
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          },
          {
            "type": "String",
            "name": "openai_key_name"
          }
        ],
        "functions": [
          {
            "name": "evaluate_model",
            "input": [
              {
                "type": "Model",
                "name": "model",
                "description": "Dataloop Model Entity"
              },
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "Dataloop Dataset Entity"
              },
              {
                "type": "Json",
                "name": "filters",
                "description": "Dataloop Filter DQL"
              }
            ],
            "output": [
              {
                "type": "Model",
                "name": "model",
                "description": "Dataloop Model Entity"
              },
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "Dataloop Dataset Entity"
              }
            ],
            "displayName": "Evaluate a Model",
            "displayIcon": "",
            "description": "Function to evaluate open AI chat completion model performance"
          },
          {
            "name": "predict_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "List of items to run inference on"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input images for prediction."
              },
              {
                "type": "Annotation[]",
                "name": "annotations",
                "description": "The predicted annotations."
              }
            ],
            "displayName": "Predict Items",
            "displayIcon": "",
            "description": "Chat completion API"
          },
          {
            "name": "predict_dataset",
            "input": [
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "Dataloop Dataset Entity"
              },
              {
                "type": "Json",
                "name": "filters",
                "description": "Dataloop Filter DQL"
              }
            ],
            "output": [
            ],
            "displayName": "Predict Dataset",
            "displayIcon": "",
            "description": "Chat Completion Open AI Dataset"
          }
        ]
      }
    ],
    "models": [
      {
        "name": "openai-gpt-3.5-turbo",
        "moduleName": "chat-completion-module",
        "scope": "project",
        "status": "pre-trained",
        "configuration": {},
        "description": "OpenAI API call for gpt-3.5-turbo"
      }
    ]
  }
}